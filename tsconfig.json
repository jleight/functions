{
    "compilerOptions": {
        "importHelpers": true,
        "lib": [ "es2015" ],
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "target": "es3",
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./@types"
    ]
}
